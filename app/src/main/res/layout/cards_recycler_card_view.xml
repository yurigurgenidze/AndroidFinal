<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="7dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:id="@+id/cards_recycler_card_view_relative_layout"
            android:layout_width="400dp"
            android:layout_height="180dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/cards_recycler_card_view_card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/cards_recycler_card_view_card_number"
                android:layout_width="187dp"
                android:layout_height="34dp"
                android:textSize="25sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="125dp"
                android:layout_marginTop="49dp"
                android:text="TextView"
                android:textColor="#FFF" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="25dp"
                android:layout_height="23dp"
                android:textColor="#FFF"
                android:layout_below="@+id/cards_recycler_card_view_card_number"
                android:layout_alignStart="@+id/cards_recycler_card_view_card_type"
                android:layout_marginStart="-12dp"
                android:layout_marginTop="8dp"
                android:text="@string/valid_thru"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/cards_recycler_card_view_valid_thru_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="37dp"
                android:layout_marginBottom="55dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/cards_recycler_card_view_card_holder"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/cards_recycler_card_view_card_type"
                android:layout_alignParentBottom="true"
                android:textColor="#FFF"
                android:layout_marginEnd="-119dp"
                android:layout_marginBottom="19dp"
                android:text="TextView" />

            <ImageView
                android:id="@+id/cards_recycler_card_view_card_image_card_type"
                android:layout_width="75dp"
                android:layout_height="46dp"
                android:textColor="#FFF"
                android:layout_alignBottom="@+id/cards_recycler_card_view_card_holder"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="2dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

